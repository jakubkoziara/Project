<h1>Listing Projects</h1>
 <div class="media">
  <div class="media-body">
<table class="table table-striped">
  <thead>

  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>
  </thead>  
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article),:class => 'btn btn-mini btn-info' %></td>
      <td><%= link_to 'Edit', edit_article_path(article),:class => 'btn btn-mini btn-info' %></td>
      <td><%= link_to 'Destroy', article_path(article),:class => 'btn btn-mini btn-info',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
 </div>
</div>
<br>
<%= link_to 'New project', new_article_path,:class => 'btn btn-mini btn-info' %>


